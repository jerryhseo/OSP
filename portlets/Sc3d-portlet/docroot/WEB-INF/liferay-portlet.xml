<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>

	<portlet>
		<portlet-name>sc3d-editor</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.test.Sc3dEditorConfigAction</configuration-action-class>
		<instanceable>true</instanceable>
		<css-class-wrapper>sc3d-editor-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>sc3d-viewer</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.test.Sc3dViewerConfigAction</configuration-action-class>
		<instanceable>true</instanceable>
		<css-class-wrapper>sc3d-viewer-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>