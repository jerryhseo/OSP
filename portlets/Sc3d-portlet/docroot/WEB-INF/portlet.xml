<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>sc3d-editor</portlet-name>
		<display-name>Sc3d Editor</display-name>
		<portlet-class>com.test.Sc3dEditor</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/sc3deditor/visualizer-wrapper.jsp</value>
		</init-param>
		<init-param>
			<name>config-template</name>
			<value>/html/sc3deditor/configuration.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Sc3d Editor</title>
			<short-title>Sc3d Editor</short-title>
			<keywords/>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>sc3d-viewer</portlet-name>
		<display-name>Sc3d Viewer</display-name>
		<portlet-class>com.test.Sc3dViewer</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/sc3dviewer/visualizer-wrapper.jsp</value>
		</init-param>
			<init-param>
			<name>config-template</name>
			<value>/html/sc3dviewer/configuration.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>Sc3d Viewer</title>
			<short-title>Sc3d Viewer</short-title>
			<keywords/>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>