<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>edison-content</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>org.kisti.edison.content.portlet.content.ConfigurationController</configuration-action-class>
		<use-default-template>true</use-default-template>
		<action-url-redirect>true</action-url-redirect>
		<css-class-wrapper>edison-content container</css-class-wrapper>	
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>edison-category-content-list</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>org.kisti.edison.content.portlet.content.ConfigurationController</configuration-action-class>
		<use-default-template>true</use-default-template>
		<action-url-redirect>true</action-url-redirect>
		<css-class-wrapper>edison-content container</css-class-wrapper>	
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>edison-mainResource</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>org.kisti.edison.content.portlet.mainResource.ConfigurationController</configuration-action-class>
		<action-url-redirect>true</action-url-redirect>
		<css-class-wrapper>edison-mainResource</css-class-wrapper>
	</portlet>
	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>
