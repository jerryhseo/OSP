<?xml version="1.0"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
  version="2.0">
  <portlet>
    <portlet-name>edison-workflow</portlet-name>
    <display-name>Edison Workflow 2016</display-name>
    <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
    <init-param>
      <name>contextConfigLocation</name>
      <value>classpath:org/kisti/edison/portlet/edison-workflow-portlet.xml</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Edison Workflow</title>
      <short-title>Edison Workflow</short-title>
      <keywords>Edison Workflow</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>administrator</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>guest</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>power-user</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>user</role-name>
    </security-role-ref>
  </portlet>
  <portlet>
  	<portlet-name>workflow-designer</portlet-name>
  	<display-name>Workflow Designer</display-name>
  	<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
    <init-param>
      <name>contextConfigLocation</name>
      <value>classpath:org/kisti/edison/portlet/edison-workflow-designer-portlet.xml</value>
    </init-param>
  	<expiration-cache>0</expiration-cache>
  	<supports>
  		<mime-type>text/html</mime-type>
  		<portlet-mode>view</portlet-mode>
  	</supports>
  	<portlet-info>
  		<title>Workflow Designer</title>
  		<short-title>Workflow Designer</short-title>
  		<keywords></keywords>
  	</portlet-info>
  	<security-role-ref>
  		<role-name>administrator</role-name>
  	</security-role-ref>
  	<security-role-ref>
  		<role-name>guest</role-name>
  	</security-role-ref>
  	<security-role-ref>
  		<role-name>power-user</role-name>
  	</security-role-ref>
  	<security-role-ref>
  		<role-name>user</role-name>
  	</security-role-ref>
  </portlet>
  <portlet>
  	<portlet-name>workflow-simulation-executor</portlet-name>
  	<display-name>Workflow Simulation Executor</display-name>
  	<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
    <init-param>
      <name>contextConfigLocation</name>
      <value>classpath:org/kisti/edison/portlet/edison-workflow-executor-portlet.xml</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
        <mime-type>text/html</mime-type>
        <portlet-mode>view</portlet-mode>
    </supports>
  	<portlet-info>
  		<title>Workflow Simulation Executor</title>
  		<short-title>Workflow Simulation Executor</short-title>
  		<keywords></keywords>
  	</portlet-info>
  	<security-role-ref>
  		<role-name>administrator</role-name>
  	</security-role-ref>
  	<security-role-ref>
  		<role-name>guest</role-name>
  	</security-role-ref>
  	<security-role-ref>
  		<role-name>power-user</role-name>
  	</security-role-ref>
  	<security-role-ref>
  		<role-name>user</role-name>
  	</security-role-ref>
  </portlet>
  
  <portlet>
    <portlet-name>workflow-monitoring</portlet-name>
    <display-name>Workflow Monitoring</display-name>
    <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
    <init-param>
      <name>contextConfigLocation</name>
      <value>classpath:org/kisti/edison/portlet/monitoring/edison-monitoring-portlet.xml</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <portlet-info>
      <title>Workflow Monitoring</title>
      <short-title>Workflow Monitoring</short-title>
      <keywords>Workflow Monitoring</keywords>
    </portlet-info>
    <security-role-ref>
      <role-name>administrator</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>guest</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>power-user</role-name>
    </security-role-ref>
    <security-role-ref>
      <role-name>user</role-name>
    </security-role-ref>
  </portlet>
  
</portlet-app>